#!/usr/bin/env ruby -wKU

require File.dirname(__FILE__) + '/../lib/netmate'

if ARGV[0].nil?
  puts "feh" 
  exit 
end

$config = {}
args = ARGV[0].dup
if args.include?("@")
  u_p = args.slice!(/^.+@/).delete('@').split(":")
  $config[:user] = u_p[0]
  $config[:pass] = u_p[1] || ''
else
  $config[:user] = ENV["USER"]
  $config[:pass] = ''
end

$config[:host] = args.slice!(/^.+:/).delete(":")
$config[:path] = args.split('.').last == '/' ? args : args + '/'

Netmate::Shell.new.run